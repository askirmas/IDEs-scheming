{
  "patterns": {
    "units": "*.json",
    "vscode": {
      "settings": ".vscode/settings.json",
      "workspace": "*.code-workspace"  
    }
  },
  "notEachJsonShouldHaveSchema": false,
  "ajv": {
    "schemaId": "auto",
    "extendRefs": true,
    "jsonPointers": true,
    "allErrors": true,
    "verbose": true,
    "ownProperties": true
  },
  "globby": {
    "gitignore": true,
    "ignore": [
      "tsconfig.json",
      "package.json",
      "package-lock.json"
    ],  
    "dot": true,
    "suppressErrors": true,
    "absolute": true  
  }
}