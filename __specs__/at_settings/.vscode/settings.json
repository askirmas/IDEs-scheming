{
  "json.schemas": [
    {
      "fileMatch": [
        "schema.json",
        "*.schema.*json"
      ],
      "url": "http://json-schema.org/draft-07/schema"
    },
    {
      "fileMatch": [
        "/root.json",
        "unit.json"
      ],
      "url": "./isObject.schema.json"
    },
    {
      "fileMatch": [
        "**/array.json"
      ],
      "schema": {
        "type": "array"
      }
    },
    {
      "fileMatch": [
        "*.object_array.*json"
      ],
      "url": "./object_array.schema.json"
    }
  ]
}