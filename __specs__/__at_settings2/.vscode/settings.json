{
  "json.schemas": [
    {
      "fileMatch": [
        "*.schema.*json"
      ],
      "url": "http://json-schema.org/draft-07/schema"
    },
    {
      "fileMatch": [
        "/root.json",
        "unit.json"
      ],
      "url": "./schema.json"
    },
    {
      "fileMatch": [
        "**/array.json"
      ],
      "schema": {
        "type": "array"
      }
    } 
  ]
}